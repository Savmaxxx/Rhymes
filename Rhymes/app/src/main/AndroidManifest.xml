<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.max.rhymes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".RhymesApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_pen"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_pen"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rhymes">
        <activity
            android:theme="@style/Theme.Rhymes.Launcher"
            android:name=".presentations.activities.SearchRhymesActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>